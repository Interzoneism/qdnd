{
  "id": "movement_test",
  "name": "Movement System Test Scenario",
  "description": "Tests action economy, special movement, and forced movement",
  "combatants": [
    {
      "id": "monk",
      "name": "Test Monk",
      "team": "player",
      "hp": 40,
      "stats": {
        "strength": 12,
        "dexterity": 18
      },
      "x": 0,
      "y": 0,
      "z": 0,
      "speed": 40,
      "abilities": ["attack", "flurry_of_blows", "step_of_the_wind"]
    },
    {
      "id": "barbarian",
      "name": "Test Barbarian",
      "team": "player",
      "hp": 60,
      "stats": {
        "strength": 18,
        "dexterity": 12
      },
      "x": 5,
      "y": 0,
      "z": 0,
      "speed": 30,
      "abilities": ["attack", "reckless_attack"]
    },
    {
      "id": "goblin",
      "name": "Goblin",
      "team": "enemy",
      "hp": 12,
      "x": 20,
      "y": 0,
      "z": 0,
      "speed": 30
    }
  ],
  "testCases": [
    {
      "name": "Monk uses full movement",
      "action": "move",
      "actor": "monk",
      "targetPosition": { "x": 40, "y": 0, "z": 0 },
      "expectedMovementUsed": 40,
      "expectedSuccess": true
    },
    {
      "name": "Monk cannot move beyond budget",
      "action": "move",
      "actor": "monk",
      "targetPosition": { "x": 50, "y": 0, "z": 0 },
      "expectedSuccess": false
    },
    {
      "name": "Barbarian dashes for double movement",
      "action": "dash",
      "actor": "barbarian",
      "expectedMovementGained": 30
    },
    {
      "name": "Jump uses STR for distance",
      "action": "jump",
      "actor": "barbarian",
      "targetPosition": { "x": 23, "y": 0, "z": 0 },
      "expectedMaxJump": 18,
      "expectedSuccess": true
    },
    {
      "name": "Barbarian pushes goblin",
      "action": "forced_move",
      "actor": "barbarian",
      "target": "goblin",
      "type": "push",
      "distance": 10,
      "expectedEndPosition": { "x": 30, "y": 0, "z": 0 }
    }
  ]
}
