{
  "id": "surface_test",
  "name": "Surface System Test Scenario",
  "description": "Tests fire, water, and surface interactions",
  "combatants": [
    {
      "id": "wizard",
      "name": "Test Wizard",
      "team": "player",
      "hp": 30,
      "stats": {
        "intelligence": 18
      },
      "x": 0,
      "y": 0,
      "z": 0,
      "abilities": ["fireball", "create_water"]
    },
    {
      "id": "goblin1",
      "name": "Goblin in Fire",
      "team": "enemy",
      "hp": 15,
      "x": 10,
      "y": 0,
      "z": 0
    },
    {
      "id": "goblin2",
      "name": "Goblin in Water",
      "team": "enemy",
      "hp": 15,
      "x": 20,
      "y": 0,
      "z": 0
    }
  ],
  "surfaces": [
    {
      "type": "fire",
      "position": { "x": 10, "y": 0, "z": 0 },
      "radius": 5,
      "duration": 3
    },
    {
      "type": "water",
      "position": { "x": 20, "y": 0, "z": 0 },
      "radius": 5,
      "duration": 0
    }
  ],
  "testCases": [
    {
      "name": "Goblin in fire takes damage on turn start",
      "phase": "turn_start",
      "actor": "goblin1",
      "expectedDamage": 5,
      "damageType": "fire"
    },
    {
      "name": "Fire and water interaction creates steam",
      "action": "create_water",
      "actor": "wizard",
      "targetPosition": { "x": 10, "y": 0, "z": 0 },
      "expectedSurface": "steam"
    },
    {
      "name": "Goblin entering fire takes damage",
      "action": "move",
      "actor": "goblin2",
      "targetPosition": { "x": 10, "y": 0, "z": 0 },
      "expectedDamage": 5,
      "damageType": "fire"
    }
  ]
}
